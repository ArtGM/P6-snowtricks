{% block nav %}
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand" href="{{ path('homepage') }}">Home</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    {% if app.user == null %}
                        <li class="nav-item">
                            <a class="nav-link"
                               href="{{ path('user_login') }}">Log in</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"
                               href="{{ path('user_registration') }}">Create Account</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <span class="nav-link">
                                Hi {{ app.user.username }} !
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('user-profile', { 'id': app.user.id }) }}">Account
                                Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('trick-form') }}">Add New Trick</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" title="logout"
                               href="{{ path('logout') }}">Log Out {% include 'icons/box_arrow_right.html.twig' %}</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}

