<header class="container-fluid bg-dark">
    {% block header %}
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Snowtrick</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/trick-form">Trick</a>
                        </li>
                        {% if app.user == null %}
                            <li class="nav-item">
                                <a class="nav-link"
                                   href="{{ path('user_login') }}">{% include 'icons/person_circle.html.twig' with { 'fontSize': '2em'} %}</a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                Hi {{ app.user.username }} !
                            </li>
                            <li class="nav-item">
                                <a title="logout"
                                   href="{{ path('logout') }}">{% include 'icons/box_arrow_right.html.twig' %}</a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ path('user-profile', { 'id': app.user.id }) }}">Account Profile</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
    {% endblock %}
</header>