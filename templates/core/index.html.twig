{% extends 'base.html.twig' %}

{% block body %}
    <section class="container-fluid">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img loading="lazy" src="/images/shifty.jpg" class="d-block w-100" alt="...">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </section>

    <section class="container">
        <div class="row list__trick" id="homeTricksList">
            <div class="spinner-container" id="spinner">
                <div class="spinner-border" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
            {% for trick in allTricks %}
                {% include 'components/trick_miniature.html.twig' %}
            {% endfor %}
        </div>
        <div class="row justify-content-center my-2">
            <button id="loadMoreTricks" class="btn btn-primary" data-page="{{ currentPage }}"
                    data-url="{{ path('load-more-tricks') }}">
                Load More...
            </button>
        </div>
    </section>



{% endblock %}